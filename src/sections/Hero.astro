---
import HeroBanner from '../components/Hero/Hero'
import PointsGridBackground from '../components/PointsGridBackground/PointGridBackground'

interface HeroProps {
  language: 'en' | 'es'
}
const {language = 'es'} = Astro.props as HeroProps
---

<div class="background">
  <section
    id="hero"
    class="hero-section"
  >
    <HeroBanner
      client:load
      language={language}
    />
  </section>
  <PointsGridBackground client:load />
</div>

<style>
  /* Layout */

  .background {
    position: relative;
    max-width: 100lvw;
  }

  .background::before {
    content: '';
    position: absolute;
    top: -300px;
    left: 0;
    width: 100%;
    height: 200%;
    background-image: url('/backgrounds/bg2.svg');
    background-size: contain;
    background-position: right;
    background-repeat: no-repeat;
    opacity: 0.4;
    z-index: -1;
    filter: blur(100px);
  }

  /* Section */
  .hero-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    max-width: 1024px;
    margin: 0 auto;
    overflow: hidden;
    position: relative;
  }
</style>
