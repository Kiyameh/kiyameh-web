---
/* Layout */
import CvLayout from "@/layouts/CvLayout.astro";

/* Components */
import ResumeContainer from "@/components/elements/Resume/Resume";

/* Content */
import background from "@/assets/backgrounds/resume_bg.svg";

/* 
 @version 1
 @revisado 02/07/2025
 @descripcion: Página de resumen en inglés
*/
---

<CvLayout>
  <div class="container">
    <img id="background" src={background.src} alt="" fetchpriority="high" />
    <ResumeContainer client:load language="en" />
  </div>
</CvLayout>

<style>
  .container {
    margin: 1rem;
  }
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }
  @media print {
    #background {
      display: none;
    }
  }
</style>
