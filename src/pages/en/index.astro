---
import HtmlLayout from '@/layouts/HtmlLayout.astro'
import NavLayout from '@/layouts/NavLayout.astro'

import AboutSection from '@/templates/landing/AboutSection.astro'
import WorksSection from '@/templates/landing/WorksSection.astro'
import SkillsSection from '@/templates/landing/SkillsSection.astro'
import ConnectSection from '@/templates/landing/ConnectSection.astro'

import {Image} from 'astro:assets'
import bg1 from '@/assets/backgrounds/bg1.svg'
import bg2 from '@/assets/backgrounds/bg2.svg'
import bg3 from '@/assets/backgrounds/bg3.svg'
import bg5 from '@/assets/backgrounds/bg5.svg'

import LandingHero from '@/components/elements/LandingHero/LandingHero'
import DesignProcessCards from '@/components/elements/DesignProcessCards/DesignProcessCards.astro'

/* 
  @version 1
  @revisado 14/07/2025
  @descripcion: Página de inicio en inglés
*/
---

<HtmlLayout>
  <NavLayout>
    <main>
      <section>
        <!-- Content -->
        <div class="container">
          <LandingHero
            language="en"
            client:load
          />
        </div>
        <!-- Decoration -->
        <div
          class="bg-grid top-left"
          aria-hidden="true"
        >
        </div>
        <Image
          src={bg2}
          alt="background-decoration"
          aria-hidden="true"
          class="bg-gradient pink"
        />
      </section>
      <section id="about">
        <!-- Content -->
        <div class="container">
          <AboutSection language="en" />
        </div>
        <!-- Decoration -->
        <Image
          src={bg1}
          alt="background-decoration"
          aria-hidden="true"
          class="bg-gradient blue"
        />
      </section>
      <section id="works">
        <!-- Content -->
        <div class="container">
          <WorksSection language="en" />
        </div>
        <!-- Decoration -->
        <Image
          src={bg3}
          alt="background-decoration"
          aria-hidden="true"
          class="bg-gradient purple"
        />
      </section>
      <section id="skills">
        <!-- Content -->
        <div class="container">
          <SkillsSection language="en" />
        </div>
        <div class="full-width-container">
          <DesignProcessCards language="en" />
        </div>
      </section>
      <section id="connect">
        <!-- Content -->
        <div class="container">
          <ConnectSection language="en" />
        </div>
        <!-- Decoration -->
        <div
          class="bg-grid bottom-right"
          aria-hidden="true"
        >
        </div>

        <Image
          src={bg5}
          alt="background-decoration"
          aria-hidden="true"
          class="bg-gradient purple2"
        />
      </section>
    </main>
  </NavLayout>
</HtmlLayout>

<style>
  /* Layout */
  section {
    position: relative;
    display: flex;
    flex-direction: column;
    place-content: center;
    min-height: 100vh;
    margin-bottom: 8rem;
  }

  .container {
    width: 100lvw;
    max-width: 1024px;
    margin: 0 auto;
  }

  .full-width-container {
    width: 100lvw;
    margin: 0 auto;
  }

  /* Background grid */
  .bg-grid {
    z-index: -1;
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      circle at 15px 15px,
      var(--gradient-300) 1px,
      transparent 0
    );
    background-size: 25px 25px;
  }
  .top-left {
    mask-image: radial-gradient(
      ellipse 80% 80% at 0% 0%,
      #000 50%,
      transparent 90%
    );
  }
  .bottom-right {
    mask-image: radial-gradient(
      ellipse 80% 80% at 100% 100%,
      #000 50%,
      transparent 90%
    );
  }

  /* Background gradients */
  .bg-gradient {
    z-index: -1;
    opacity: 0.5;
    filter: blur(100px);
  }
  .pink,
  .purple {
    position: absolute;
    right: 0;
    bottom: 0;
  }
  .blue,
  .purple2 {
    position: absolute;
    left: 0;
    bottom: 0;
  }
</style>
