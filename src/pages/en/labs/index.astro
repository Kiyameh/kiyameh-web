---
import PortfolioLayout from "@/layouts/PortfolioLayout.astro";
import SectionTitle from "@/components/SectionTitle/SectionTitle";
import Hero from "@/sections/labs/hero.astro";
---

<PortfolioLayout>
  <div class="page-container">
    <main>
      <Hero language="en" />

      <section class="section-container" id="components">
        <SectionTitle id="components" level="title">Components </SectionTitle>
      </section>
      <section class="section-container" id="mountain">
        <SectionTitle id="mountain" level="title">Mountain </SectionTitle>
      </section>
    </main>
  </div>
</PortfolioLayout>

<style>
  main {
    width: 100%;
    max-width: 1024px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
  }
  main::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 80%;
    background-image: url("/public/backgrounds/bg1.svg");
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    opacity: 0.4;
    z-index: -1;
    filter: blur(100px);
  }
  /* Sections */
  .section-container {
    width: 100%;
    min-height: 100lvh;
    margin-bottom: 5rem;
  }
  #components {
    background: var(--surface-300);
    border-radius: 1rem;
    border-top-right-radius: 6rem;
    border-bottom-left-radius: 6rem;
  }
  #mountain {
    background: var(--content);
    color: var(--surface-200);
    border-radius: 1rem;
    border-top-right-radius: 6rem;
    border-bottom-left-radius: 6rem;
  }
</style>
