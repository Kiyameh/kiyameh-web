---
/* Components */
import ResumeContainer from '@/components/elements/Resume/Resume'

/* Layout */
import HtmlLayout from '@/layouts/HtmlLayout.astro'
import NavLayout from '@/layouts/NavLayout.astro'

/* Content */
import background from '@/assets/backgrounds/resume_bg.svg'

/* 
 @version 2
 @revisado 04/09/2025
 @descripcion: Página de resumen en español
*/
---

<HtmlLayout pageTitle="Cv de Andoni">
  <NavLayout>
    <div class="container">
      <img
        id="background"
        src={background.src}
        alt=""
        fetchpriority="high"
      />
      <ResumeContainer
        client:load
        language="es"
      />
    </div>
  </NavLayout>
</HtmlLayout>

<style>
  .container {
    margin: 1rem;
  }
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }
  @media print {
    #background {
      display: none;
    }
  }
</style>
