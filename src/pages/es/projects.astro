---
import '../../styles/css-components.css'
import PortfolioLayout from '../../layouts/PortfolioLayout.astro'
import {getCollection} from 'astro:content'
import PointsGridBackground from '../../components/PointsGridBackground/PointGridBackground'
import ProjectCardContainer from '../../components/ProjectCardContainer/ProjectCardContainer'

// Obtener todos los proyectos de la colección
const projects = await getCollection('projects')

// Ordenar por fecha (más recientes primero)
const sortedProjects = projects.sort((a, b) => {
  const dateA = a.data.date ? new Date(a.data.date) : new Date(0)
  const dateB = b.data.date ? new Date(b.data.date) : new Date(0)
  return dateB.getTime() - dateA.getTime()
})
---

<PortfolioLayout>
  <div class="background">
    <!-- Título principal que ocupa 100vh -->
    <section class="hero-section">
      <div class="hero-content">
        <h1 class="hero-title fantasy-text">Proyectos</h1>
        <p class="hero-description code-text">
          Una colección de mis trabajos más recientes y destacados
        </p>
      </div>
    </section>

    <ProjectCardContainer
      projects={sortedProjects}
      language="es"
      client:load
    />

    <PointsGridBackground client:load />
  </div>
</PortfolioLayout>

<style>
  /* Layout */
  .background {
    position: relative;
    max-width: 100lvw;
  }

  .background::before {
    content: '';
    position: absolute;
    top: -300px;
    left: 0;
    width: 100%;
    height: 200%;
    background-image: url('/backgrounds/bg2.svg');
    background-size: contain;
    background-position: right;
    background-repeat: no-repeat;
    opacity: 0.4;
    z-index: -1;
    filter: blur(100px);
  }

  /* Hero Section */
  .hero-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    max-width: 1024px;
    margin: 0 auto;
    overflow: hidden;
    position: relative;
  }

  .hero-content {
    text-align: center;
    z-index: 1;
  }

  .hero-title {
    font-size: 2.5rem;
    padding-bottom: 1.5rem;
    line-height: 1.1;
  }

  .hero-description {
    font-size: clamp(1rem, 2vw, 1.25rem);
    opacity: 0.8;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-section {
      padding: 0 1rem;
    }
  }
</style>
