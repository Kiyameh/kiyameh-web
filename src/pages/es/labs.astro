---
import PortfolioLayout from "@/layouts/PortfolioLayout.astro";
import SectionTitle from "@/components/ui/SectionTitle/SectionTitle";
import LabsHero from "@/templates/labs/LabsHero.astro";
import { Image } from "astro:assets";
import bg1 from "@/assets/backgrounds/bg1.svg";

/* 
  @version 1
  @revisado 14/07/2025
  @descripcion: Página de labs en español
*/
---

<PortfolioLayout>
  <div class="page-container">
    <div class="bg-grid" aria-hidden="true"></div>
    <Image
      src={bg1}
      alt="background-decoration"
      aria-hidden="true"
      class="bg-gradient"
    />
    <main>
      <LabsHero language="es" />

      <section class="section-container" id="components">
        <SectionTitle id="components" level="title">Componentes </SectionTitle>
      </section>
    </main>
  </div>
</PortfolioLayout>

<style>
  main {
    width: 100%;
    max-width: 1024px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  /* Background grid */
  .bg-grid {
    z-index: -1;
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      circle at 15px 15px,
      var(--gradient-300) 1px,
      transparent 0
    );
    background-size: 25px 25px;
    mask-image: radial-gradient(
      ellipse 80% 80% at 0% 0%,
      #000 50%,
      transparent 90%
    );
  }

  .bg-gradient {
    position: absolute;
    top: 500px;
    right: 0;
    width: 60lvw;
    height: 100lvh;
    z-index: -1;
    opacity: 0.5;
    filter: blur(100px);
  }

  /* Sections */
  .section-container {
    width: 100%;
    min-height: 100lvh;
    margin-bottom: 5rem;
  }
  #components {
    background: var(--surface-300);
    border-radius: 1rem;
    border-top-right-radius: 6rem;
    border-bottom-left-radius: 6rem;
  }
</style>
