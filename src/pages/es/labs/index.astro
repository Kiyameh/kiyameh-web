---
import HtmlLayout from '@/layouts/HtmlLayout.astro'
import NavLayout from '@/layouts/NavLayout.astro'
import LabsHero from '@/templates/labs/LabsHero.astro'
import {Image} from 'astro:assets'
import bg1 from '@/assets/backgrounds/bg1.svg'
import ChipCarrouselPanel from '@/templates/labs/ChipCarrouselPanel.astro'
import TechChipPanel from '@/templates/labs/TechChipPanel.astro'
import CornerRibbonPanel from '@/templates/labs/CornerRibbonPanel.astro'
import RingChartPanel from '@/templates/labs/RingChartPanel.astro'
import TripleSwitchPanel from '@/templates/labs/TripleSwitchPanel.astro'
import HandwrittenNotePanel from '@/templates/labs/HandwrittenNotePanel.astro'

/* 
  @version 1
  @revisado 04/09/2025
  @descripcion: Página de labs en español
*/
---

<HtmlLayout pageTitle="Laboratorios de Andoni">
  <NavLayout>
    <div class="page-container">
      <div
        class="bg-grid"
        aria-hidden="true"
      >
      </div>
      <Image
        src={bg1}
        alt="background-decoration"
        aria-hidden="true"
        class="bg-gradient"
      />
      <LabsHero language="es" />
      <main>
        <ChipCarrouselPanel />
        <HandwrittenNotePanel />
        <TechChipPanel />
        <CornerRibbonPanel />
        <RingChartPanel />
        <TripleSwitchPanel />
      </main>
    </div>
  </NavLayout>
</HtmlLayout>

<style>
  main {
    width: 100%;
    max-width: 1024px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    gap: 4rem;
  }

  /* Background grid */
  .bg-grid {
    z-index: -1;
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      circle at 15px 15px,
      var(--gradient-300) 1px,
      transparent 0
    );
    background-size: 25px 25px;
    mask-image: radial-gradient(
      ellipse 80% 80% at 0% 0%,
      #000 50%,
      transparent 90%
    );
  }

  .bg-gradient {
    position: absolute;
    top: 500px;
    right: 0;
    width: 60lvw;
    height: 100lvh;
    z-index: -1;
    opacity: 0.5;
    filter: blur(100px);
  }
</style>
