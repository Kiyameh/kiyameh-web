---
import { Info } from "lucide-react";
import Alert from "@/components/ui/Alert/Alert.astro";
import HandwrittenNoteShowcase from "@/components/ui/HandwrittenNote/HandwrittenNoteShowcase";
import SectionTitle from "@/components/ui/SectionTitle/SectionTitle";
---

<section>
  <SectionTitle
    id="handwritten-note"
    level="subtitle"
  >
    Handwritten Note</SectionTitle
  >
  <div>
    <Alert>
      <Info slot="icon" />
      <p>
        El componente <span class="emphasis">{`<HandwrittenNote>`}</span> a√±ade notas
        manuscritas en diferentes posiciones alrededor de un elemento. Es tu responsabilidad
        posicionarlo correctamente.
      </p>
    </Alert>
    <HandwrittenNoteShowcase client:load />
  </div>
</section>

<style>
  section {
    width: 100%;
    border-radius: 1rem;
    border-top-right-radius: 8rem;
    border-bottom-left-radius: 8rem;
    padding: 4rem 1rem;
    display: flex;
    flex-direction: column;
    align-items: start;
    gap: 3rem;
    position: relative;
    background: radial-gradient(
      circle at 100% 100%,
      rgba(0, 137, 252, 0.4) 0%,
      rgba(0, 137, 252, 0.2) 15%,
      var(--surface-300) 100%
    );
  }
  @media screen and (min-width: 768px) {
    section {
      padding: 5rem 3rem;
      border-top-right-radius: 14rem;
      border-bottom-left-radius: 14rem;
    }
  }
</style>
